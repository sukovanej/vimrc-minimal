set clipboard=unnamed
set number
set relativenumber

syntax on
colorscheme focuspoint

filetype plugin indent on
set tabstop=4
set shiftwidth=4
set expandtab
set nowrap
set scrolloff=10

nnoremap <C-c><C-c> :noh<cr>

let g:python_highlight_all = 1

nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>
